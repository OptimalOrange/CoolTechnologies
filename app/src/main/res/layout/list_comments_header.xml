<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/comments_margin_10dp"
            android:layout_marginRight="@dimen/comments_edit_margin"
            android:text="@string/comment_word_number"
            android:textSize="@dimen/text_size_input_dense"
            android:textColor="@color/text_disabled_or_hint_black"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/comments_margin_10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_send_grey600_24dp"
            />
</RelativeLayout>
