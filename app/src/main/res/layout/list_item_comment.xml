<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/comments_padding_5dp"
              android:orientation="horizontal">

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/comments_margin_5dp"
                android:textColor="@color/text_secondary_black"
                android:textSize="@dimen/text_size_title_dense"
                />
        <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary_black"
                android:textSize="@dimen/text_size_body_dense"
                />
        <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/comments_margin_5dp"
                android:textColor="@color/text_disabled_or_hint_black"
                android:textSize="@dimen/text_size_caption_dense"
                />

    </LinearLayout>

</LinearLayout>
