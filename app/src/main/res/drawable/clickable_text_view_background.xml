<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:drawable="@color/primary_light"/> <!-- pressed -->
    <item android:state_focused="true"
          android:drawable="@color/primary_light"/> <!-- focused -->
    <item android:state_hovered="true"
          android:drawable="@color/primary_light"/> <!-- hovered -->
    <item android:drawable="@android:color/transparent"/> <!-- default should always be last -->
</selector>
